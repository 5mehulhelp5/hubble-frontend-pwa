{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential",
        "plugin:@typescript-eslint/recommended",
        "@nuxtjs/eslint-config-typescript"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "indent": [
            "error",
            4
        ],
        "vue/html-indent": [
            "error",
            4
        ],
        "no-multi-spaces": [
            "error"
        ],
        "@typescript-eslint/no-unused-vars": [
            "off"
        ],
        "vue/multi-word-component-names": [
            "off"
        ],
        "no-trailing-spaces": [
            "off"
        ],
        "@typescript-eslint/ban-ts-comment": [
            "off"
        ]
    }
}
